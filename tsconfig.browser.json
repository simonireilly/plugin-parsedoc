{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES6",
    "module": "ES6",
    "outDir": "dist",
    "lib": ["DOM"],
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": false,
    "resolveJsonModule": false,
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "include": ["src/browser/*.ts"]
}
